#!/bin/sh
#
# This script is called from .bowerrc and automatically runs after `bower install`

# NOTE: The packages downloaded by bower in this directory wont be copied to the theme folder
# If the theme needs to load any of them in production you must modify gulpfile.js or Tupfile
# files to copy them to the appropiate folder under /src/ (js, css, img, fonts)
DIR="vendor-dl/"


##
# 1 PREEN PACKAGES
#
preen


##
# 2 RENAME CSS FILES
#
# don't forget to import them from lib/sass/_dependencies.scss
#

echo -n "renaming css files... "

mv ${DIR}/normalize.css/normalize.css ${DIR}/normalize.css/_normalize.scss 2>/dev/null

echo "Done."

